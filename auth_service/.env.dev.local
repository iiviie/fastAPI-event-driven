# Local Development Environment Configuration (outside Docker)
ENVIRONMENT=dev

# Application
APP_NAME=Auth Microservice
APP_VERSION=0.1.0
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# Database (Local PostgreSQL)
DATABASE_URL=postgresql+asyncpg://auth_user:auth_password@localhost:5432/auth_db
DATABASE_URL_SYNC=postgresql+psycopg2://auth_user:auth_password@localhost:5432/auth_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=auth_user
DATABASE_NAME=auth_db

# Redis (Local Redis)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# Security (Change these in production!)
SECRET_KEY=dev-secret-key-change-in-production-very-insecure
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:3000"]

# Logging
LOG_LEVEL=DEBUG
